@model tabla66.Models.User

@{
    ViewBag.Title = "MyPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Välkommen @Model.Name</h2>
<p>Här kan du markera de kanaler du vill följa</p>
<div class="kanalväljare">
    <form class="form-vertical" action="@Url.Action("AddToMyChannels")" method="post">
        <div class="module-body">
            <div class="control-group">
                <div class="controls row-fluid">
                    <button type="submit" class="btn btn-primary pull-right" value="1" name="AddKanal">SVT1</button>
                    <button type="submit" class="btn btn-primary pull-right" value="2" name="AddKanal">SVT2</button>
                    <button type="submit" class="btn btn-primary pull-right" value="3" name="AddKanal">TV3</button>
                    <button type="submit" class="btn btn-primary pull-right" value="4" name="AddKanal">TV4</button>
                    <button type="submit" class="btn btn-primary pull-right" value="5" name="AddKanal">Kanal5</button>
                    <button type="submit" class="btn btn-primary pull-right" value="6" name="AddKanal">TV6</button>
                </div>
            </div>
        </div>
    </form>
</div>
<button type="button" onclick="location.href='@Url.Action("Logout", "Users")'">Logga ut</button>
